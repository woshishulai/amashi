/* pages/order/order.wxss */
page {
  background-color: #f2f2f2;
}

.main {
  padding: 37rpx 0 1rpx 0;
}

.nav {
  width: 100%;
  height: 104rpx;
  background-color: #4e89f1;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.navlist {
  width: 292rpx;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  border-radius: 30rpx 30rpx 0 0;
  font-size: 30rpx;
  color: #fff;
}

.navlist.active {
  background-color: #f2f2f2;
  color: #000;
}

.list {
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  margin-bottom: 42rpx;
  padding: 30rpx 22rpx 30rpx 28rpx;
  box-sizing: border-box;
}

.list .chaimg {
  width: 58rpx;
  height: 58rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 58rpx;
  text-align: center;
  background-color: #4e89f1;
  border-radius: 50%;
}

.listhui .chaimg {
  background-color: #c9c9c9;
}

.list .cha_text {
  font-size: 26rpx;
  color: #000000;
  line-height: 36rpx;
  margin-left: 38rpx;
}

.listhui .cha_text {
  color: #555555;
}

.cha_rig {
  margin-left: auto;
}

.status {
  width: 124rpx;
  height: 46rpx;
  text-align: center;
  line-height: 46rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 30rpx;
  overflow: hidden;
}

.status1 {
  background-color: #20c8c0;
}

.status2 {
  background-color: #4e89f1;
}

.status3 {
  background-color: #cbd0d5;
}

.status4 {
  background-color: #93a8c1;
}